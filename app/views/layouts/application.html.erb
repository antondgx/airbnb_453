<!DOCTYPE html>
<html>
<head>
  <title>Airbnb453</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
</head>


<body>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag "Airbnb-logo.png", width: 50 %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <% if user_signed_in? %>
            <%= current_user.email %>
          <% else %>
            <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
          <% end %>
        <li class="nav-item active">
        </li>
        <li class="nav-item dropdown">
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
             <a class="dropdown-item" href="#"><%= link_to 'Logout', destroy_user_session_path, method: 'delete' %></a>
             <a class="dropdown-item" href="#"><%= link_to 'MyProperties', properties_path %> </a>
             <a class="dropdown-item" href="#"><%= link_to 'MyBookings', my_bookings_path %> </a>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>

  <div class="container" style="padding: 60px;">
    <%= yield %>
  </div>

  
  <div class="footer">
    <div class="container">
      <div class="footer-links">
        <a href="#"><i class="fab fa-github"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
      </div>
      <div class="footer-copyright">
        @2020 Airbnb <i class="fas fa-heart"></i> by Le Wagon SG 453 Batch
      </div>
    </div>
  </div>
</body>
</html>
