<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for [ @property, @review]  do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
        <%= f.submit "Save Review", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>