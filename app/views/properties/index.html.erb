<h1> All Apartment listings </h1>

<%= link_to "My bookings (I'm a renter)", my_bookings_path %>
<br>
<%= link_to "Bookings on my apartments (I'm a owner)", bookings_on_my_properties_path %>

<hr>

<h4> <%= link_to  "Create new apartment", new_property_path %> </h4>

<hr>

<% @properties.each do |property| %>
    <h4> <%= property.title %> </h4>
    <% property.photos.each do |photo|  %>
       <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <%end%>
    <p> Description: <%= property.description %> </p>
    <p> Price: <%= property.price %> </p>
    <p> Address: <%= property.address %> </p>
    <p> Capacity: <%= property.capacity %> </p>
    <p> <%= link_to "Show this apartment", property_path(property) %> </p>
    <hr>
<% end %>




